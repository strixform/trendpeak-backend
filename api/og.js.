import { ImageResponse } from '@vercel/og';

export const config = {
  runtime: 'edge',
};

export default async function handler(req) {
  try {
    const { searchParams } = new URL(req.url);
    const q = searchParams.get('q') || 'TrendPeak';
    const labels = (searchParams.get('labels') || '').split(',');
    const values = (searchParams.get('values') || '').split(',');

    return new ImageResponse(
      (
        <div
          style={{
            background: 'black',
            color: 'white',
            width: '100%',
            height: '100%',
            display: 'flex',
            flexDirection: 'column',
            justifyContent: 'center',
            alignItems: 'center',
            fontSize: 40,
            fontFamily: 'sans-serif',
          }}
        >
          <div style={{ fontSize: 60, fontWeight: 'bold', marginBottom: 10 }}>
            {q}
          </div>
          <div style={{ fontSize: 20, opacity: 0.8 }}>
            {labels.length} data points â€¢ TrendPeak
          </div>
        </div>
      ),
      { width: 1200, height: 630 }
    );
  } catch (e) {
    return new Response('Error generating image', { status: 500 });
  }
}
